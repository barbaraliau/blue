<!-- views/admin.ejs -->
<!doctype html>
<html>
<head>
  <title>Admin</title>
</head>
<body>
  <% include header %>
  <% if( user.membership.admin == true) { %>

<div class="container">
  <div class="page-header text-center">
    <h1><span class="fa fa-key"></span> Admin Controls</h1>
  </div>
  <div class="well">
    <div class="row">
      <div class="col-md-6">
        <form action="/admin/:local_signup_check" method="get">
          <table class="table">
            <tr>
              <th>Local Signup</th>
              <th>
                <input type="checkbox" name="local_signup_check" value="1" />
                <input type="hidden" name="local_signup_check" value="0" />
              </th>
            </tr>
            <tr>
              <th><button type="submit">Apply</button></th>
            </tr>
          </table>
        </form>
      </div>
    </div>
  </div>
</div>

  <% } else { %>

<div class="container">
  <div class="page-header text-center">
    <h1>You do not have admin privileges</h1>
  </div>
</div>

  <% } %>
  <% include footer %>
